{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false, // keep true only if you really need .js in src
    "skipLibCheck": true,
    "strict": true, // flip to false if you hit too many TS errors
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler", // best for Next 13+ / 16
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Next handles JSX transform
    "baseUrl": "src", // enables @/ alias
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
